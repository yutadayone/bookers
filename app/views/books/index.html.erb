
<main>
<h1>Books</h1>







<table>
<thead>
  <tr>
 
  <th>Title</th>

  <th>Body</th>


</tr>
  </thead>
   <tbody>
    
      <% @books.each do |book| %>
       <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     
      </tr>
     <% end %>
    
      </tbody>
  </table>

  <h2>New book</h2>

 
    <%= form_with model: @book do |f| %>
    <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

 <P><%= f.submit 'Create Book' %></P>
<% end %>
 








</main>